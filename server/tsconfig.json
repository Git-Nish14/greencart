{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "src", // <--- your TS files inside src/
    "outDir": "dist", // <--- compiled JS files go to dist/
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
